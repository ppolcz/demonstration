\setlength\columnsep{40pt} % This is the default columnsep for all pages
\newcommand{\wordlist}[2]
{{
    \renewcommand\labelitemi{}
    \setlength\columnsep{0pt} % This is the default columnsep for all pages
    \begin{multicols}{#1}
        \begin{compactitem}
            \setlength\itemsep{-5pt}
            \foreach \s [count=\i] in {#2} { \item \s }
        \end{compactitem}
    \end{multicols}
}}

